<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            android:id="@+id/btn_teset"
            style="@style/CommonShapeButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="圆形按钮"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_fillColor="#00bc71"
            app:srb_shapeMode="oval" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="按钮样式+水波纹+填充颜色+圆角"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_cornerRadius="50dp"
            app:srb_fillColor="#00bc71" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="部分圆角"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_cornerPosition="bottomLeft|topRight"
            app:srb_cornerRadius="20dp"
            app:srb_fillColor="#00bc71" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:stateListAnimator="@null"
            android:text="去除阴影效果"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_cornerPosition="bottomLeft|topRight"
            app:srb_cornerRadius="20dp"
            app:srb_fillColor="#00bc71" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:elevation="0dp"
            android:text="渐变色-左下角到右上角"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_cornerRadius="20dp"
            app:srb_endColor="#FF639B"
            app:srb_orientation="leftBottomToRightTop"
            app:srb_startColor="#00bc71" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="渐变填充描边"
            android:textColor="#fff"
            app:srb_activeEnable="true"
            app:srb_cornerPosition="topLeft"
            app:srb_cornerRadius="20dp"
            app:srb_endColor="#FF639B"
            app:srb_orientation="leftTopToRightBottom"
            app:srb_startColor="#00bc71"
            app:srb_strokeColor="@color/color_theme"
            app:srb_strokeWidth="1dp" />

        <mm.chenme.lib.commutillib.pro.view.ShapeRippleButton
            style="@style/CommonShapeButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="无填充色"
            android:textColor="@color/color_theme"
            app:srb_activeEnable="true"
            app:srb_cornerRadius="20dp"
            app:srb_fillColor="@color/color_pageBg"
            app:srb_strokeColor="@color/color_theme"
            app:srb_strokeWidth="1dp" />
    </LinearLayout>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <!--
            QMUITopBarLayout 中的 background：控制状态栏颜色
            QMUITopBar 中的 background：控制标题栏的颜色
        -->

        <com.qmuiteam.qmui.widget.QMUITopBar
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/qmui_topbar_height"
            android:fitsSystemWindows="true"
            app:qmui_bottomDividerHeight="0dp"
            app:qmui_layout_collapseMode="pin"
            app:qmui_topbar_title_gravity="center" />
    </com.qmuiteam.qmui.widget.QMUITopBarLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>