<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ViewClipHelperStrategy">
        <!--  圆角大小   -->
        <attr name="clip_radius" format="dimension" />
        <attr name="clip_side" format="enum">
            <enum name="all" value="0" />
            <enum name="left" value="1" /> <!-- 左边 -->
            <enum name="top" value="2" /> <!-- 上边 -->
            <enum name="right" value="3" /> <!-- 右边 -->
            <enum name="bottom" value="4" /> <!-- 下边 -->
        </attr>
    </declare-styleable>

    <declare-styleable name="ShapeRippleButton">

        <attr name="srb_shapeMode" format="enum"> <!--shape模式-->
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="srb_fillColor" format="color" /> <!--填充颜色-->
        <attr name="srb_pressedColor" format="color" /> <!--按压颜色-->
        <attr name="srb_strokeColor" format="color" /> <!--描边颜色-->
        <attr name="srb_strokeWidth" format="dimension" /> <!--描边宽度-->
        <attr name="srb_cornerRadius" format="dimension" /> <!--圆角大小-->
        <attr name="srb_cornerPosition"> <!--圆角位置-->
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
        </attr>
        <attr name="srb_activeEnable" format="boolean" /> <!--是否开启动效-->
        <attr name="srb_drawablePosition" format="enum"> <!--drawable位置-->
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="srb_startColor" format="color" />  <!--渐变开始颜色-->
        <attr name="srb_endColor" format="color" /> <!--渐变结束颜色-->
        <attr name="srb_orientation" format="enum"> <!--渐变方向-->
            <enum name="topToBottom" value="0" />
            <enum name="leftToRight" value="1" />
            <enum name="leftTopToRightBottom" value="2" />
            <enum name="leftBottomToRightTop" value="3" />
        </attr>
    </declare-styleable>
</resources>